package com.syntax.class09;

public class Task4 {
public static void main(String [] args) {
//	Print the following pattern:
//		*
//		**
//		***
//		****
//		*****
	
	for (int i = 1; i <=1; i++) {
		for (int k =1; k<=1; k++ )
			System.out.println("*");
		
	} 
	
	for (int i = 1; i <=1; i++) {
		for (int k =1; k<=2; k++ )
			System.out.print("*");
	System.out.println();
	}
	for (int i= 1; i <=1; i++) {
		for (int k = 1; k<= 3; k++)
			System.out.print("*");
		System.out.println();
	}
	for (int i=1; i<=1; i++) {
		for (int k=1; k<=4; k++) 
			System.out.print("*");
	}
	for (int i =1; i<=1; i++) {
		for (int k = 1; k <= 5; k++)
			System.out.print("*");
	}
}
}
